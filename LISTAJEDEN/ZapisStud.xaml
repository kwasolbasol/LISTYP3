<Window x:Class="LISTAJEDEN.ZapisStud"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LISTAJEDEN"
        mc:Ignorable="d"
         Title="ZapisStud" Height="310" Width="200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="17*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Margin="10,10,10,10" Grid.ColumnSpan="2">
            <TextBlock Text="Imię:"/>
            <TextBox x:Name="FirstNameTextBox" Width="200" Margin="0 5 0 10" Background="Wheat"/>

            <TextBlock Text="Nazwisko:"/>
            <TextBox x:Name="lastNameTextBox" Width="200" Margin="0 5 0 10" Background="Wheat"/>

            <TextBlock Text="Data urodzenia:"/>
            <DatePicker x:Name="birthDatePicker" Width="200" Margin="0 5 0 10" Background="Blue"/>

            <TextBlock Text="Semestr:"/>
            <TextBox x:Name="semesterTextBox" Width="200" Margin="0 5 0 10" Background="Wheat"/>

            <Button Content="Dodaj studenta" Width="100" HorizontalAlignment="Center" Margin="0 20 0 0"/>
        </StackPanel>
    </Grid>
</Window>
